@{
    ViewBag.Title = "Dashboard";
}

<div class="card mt-3">
    <div class="card-body">
        <!-- Mensaje de bienvenida personalizado -->
        <div class="card border-left-primary shadow-sm mb-3">
            <div class="card-body py-3">
                <div class="h4 mb-0 font-weight-bold text-gray-800">Dashboard: ¡Bienvenido/a! @ViewBag.NombreUsuario</div>
            </div>
        </div>
        <!-- Mensaje de error (si existe) -->
        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>¡Atención!</strong> @ViewBag.Mensaje
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <!-- Tarjetas de resumen -->
        <div class="row mb-4">
            <div class="col-xl-3 col-md-6">
                <div class="card border-left-success shadow-sm h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Archivos compartidos
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ArchivosCompartidos</div>
                            </div>
                            <div class="col-auto text-secondary">
                                <i class="fas fa-share-alt fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card border-left-info shadow-sm h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Almacenamiento
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.AlmacenamientoUsado</div>
                            </div>
                            <div class="col-auto text-secondary">
                                <i class="fas fa-hdd fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card border-left-warning shadow-sm h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Asignaturas pendientes
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.MatricesPendientes</div>
                            </div>
                            <div class="col-auto text-secondary">
                                <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card border-left-success shadow-sm h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Avance global
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.AvanceGlobal %</div>
                            </div>
                            <div class="col-auto text-secondary">
                                <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gráficos y contenido adicional -->
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Progreso Semanal de Contenidos</h6>
                        <span class="badge badge-info">Últimas 8 semanas</span>
                    </div>
                    <div class="card-body">
                        <div class="chart-area" style="height: 300px;">
                            <canvas id="chartProgresoSemanal"></canvas>
                        </div>

                        <!-- Resumen numérico -->
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="card border-left-success shadow-sm h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                    Contenidos Finalizados
                                                </div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalFinalizados</div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-check-circle fa-2x text-success"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card border-left-warning shadow-sm h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                    Contenidos Pendientes
                                                </div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalPendientes</div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-clock fa-2x text-warning"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Accesos Directos</h6>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @*<a href="#" class="list-group-item list-group-item-action">
                                    <i class="fas fa-file-alt mr-2"></i> Nuevo Documento
                                </a>*@
                            <a href="@Url.Action("Index", "Usuario")" class="list-group-item list-group-item-action">
                                <i class="fas fa-users mr-2"></i> Gestión de Usuarios
                            </a>
                            <a href="@Url.Action("Configuraciones", "Usuario")" class="list-group-item list-group-item-action">
                                <i class="fas fa-cog mr-2"></i> Configuración
                            </a>
                            <a href="@Url.Action("Index", "Reporte")" class="list-group-item list-group-item-action">
                                <i class="fas fa-chart-line mr-2"></i> Reportes
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Script para gráficos -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var semanasLabels = @Html.Raw(ViewBag.SemanasLabels);
    var datosFinalizados = @Html.Raw(ViewBag.ContenidosFinalizados);
    var datosPendientes = @Html.Raw(ViewBag.ContenidosPendientes);

    var ctx = document.getElementById('chartProgresoSemanal');
    var myBarChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: semanasLabels,
            datasets: [
                {
                    label: 'Contenidos Finalizados',
                    backgroundColor: 'rgba(40, 167, 69, 0.8)',
                    borderColor: 'rgba(40, 167, 69, 1)',
                    borderWidth: 1,
                    data: datosFinalizados
                },
                {
                    label: 'Contenidos Pendientes',
                    backgroundColor: 'rgba(255, 193, 7, 0.8)',
                    borderColor: 'rgba(255, 193, 7, 1)',
                    borderWidth: 1,
                    data: datosPendientes
                }
            ]
        },
        options: {
            maintainAspectRatio: false,
            scales: {
                x: {
                    stacked: true,
                    title: {
                        display: true,
                        text: 'Semanas'
                    }
                },
                y: {
                    stacked: true,
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Cantidad de Contenidos'
                    },
                    ticks: {
                        stepSize: 1
                    }
                }
            },
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            var label = context.dataset.label || '';
                            if (label) {
                                label += ': ';
                            }
                            label += context.parsed.y;
                            return label;
                        }
                    }
                }
            }
        }
    });
    </script>
}