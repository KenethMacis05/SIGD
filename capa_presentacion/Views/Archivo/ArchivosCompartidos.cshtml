
@{
    ViewBag.Title = "Archivos Compartidas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="@Url.Content("~/Content/EstilosComponentes/styleDropzone.css")" />
<link rel="stylesheet" href="@Url.Content("~/Content/Views/Archivos.css")" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/css/lightgallery-bundle.min.css" />

<!--Contenedor-->
<div class="card shadow-sm mt-3">
    <div class="card-header pb-0 border-bottom-0">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <!--Boton 1-->
            <li class="nav-item" role="presentation">
                <button class="nav-link active esp-link" id="archivosCompartidosConmigo-tab" onclick="handleTabClick('archivosCompartidosConmigo')" data-bs-toggle="tab" data-bs-target="#archivosCompartidosConmigo" type="button" role="tab" aria-controls="archivosCompartidosConmigo" aria-selected="true">
                    Archivos compartidos
                </button>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content" id="myTabContent">
            <!-- Contenedor 1 -->
            <div class="tab-pane fade show active" id="archivosCompartidosConmigo" role="tabpanel" aria-labelledby="archivosCompartidosConmigo-tab">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="mb-0">Archivos compartidos</h2>
                </div>

                <hr />

                <!-- Archivos -->
                <div class="container-fluid mb-3">
                    <div class="row g-3" id="contenedor-archivos-compartidos-conmigo">
                        <!-- Los archivos se cargarán dinámicamente aquí -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para crear/editar una nueva carpeta-->
    @Html.Partial("~/Views/Archivo/_ModalCrearCarpeta.cshtml")

    <!-- Modal para renombrar un archivo-->
    @Html.Partial("~/Views/Archivo/_ModalRenombrarArchivo.cshtml")

    <!-- Modal para subir archivos -->
    @Html.Partial("~/Views/Archivo/_ModalSubirArchivos.cshtml")

    <!-- Modal visualizar pdf/text -->
    @Html.Partial("~/Views/Archivo/_ModalVisualizarPDF-TXT.cshtml")

    <!-- Modal visualizar documentos onlyoffice -->
    @Html.Partial("~/Views/Archivo/_ModalVisualizarDocsOnlyOffice.cshtml")

    <!-- Modal visualizar imagenes/videos -->
    <div id="lightgallery" style="display:none;" hidden></div>

</div>


