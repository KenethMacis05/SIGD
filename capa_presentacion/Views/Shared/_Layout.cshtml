@using capa_presentacion.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/x-icon" href="@Url.Content("~/faviconUNAN.ico")" />
    <link href="~/Scripts/Summernote/summernote-bs5.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/css/lightgallery-bundle.min.css" />
</head>
<body class="sb-nav-fixed">
    <div id="layoutSidenav">
        <!-- Columna de Navegación -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark pt-2" id="sidenavAccordion" style="background-color: white; border-right: 1px solid #E6E6E6">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading p-3 text-center">
                            <img class="img-fluid img-marca" src="@Url.Content("~/Assets/img/Marca.png")" alt="UNAN-Managua" />
                        </div>
                        <hr style="background-color: #E6E6E6" class="m-2" />
                        <div style="background-color: #FBB907" class="d-flex align-items-center justify-content-center py-2">
                            <p class="fs-6 fw-bold m-0" style="color: #02116F">@ViewBag.RolUsuario</p>
                        </div>
                        @Html.GenerarMenu()
                    </div>
                </div>
                <div class="sb-sidenav-footer p-3">
                    <hr class="divider" />
                    <a class="nav-link esp-link" href="@Url.Action("CerrarSesion", "Home")">
                        <i class="fas fa-door-closed me-2"></i>
                        Cerrar Sesión
                    </a>
                </div>
            </nav>
        </div>
        <!-- Contenido Principal -->
        <div id="layoutSidenav_content" style="top: 0">
            <main>
                <div class="sb-topnav text-center text-white w-100 esp-background d-flex align-items-center justify-content-center" style="position: relative; height: 80px">
                    <h1 class="fs-3 m-0">Sistema Integrado de Gestión Didáctica - <span style="color: #FBB907" class="fw-bold">SIGD</span></h1>
                </div>
                <nav class="sb-topnav navbar navbar-expand navbar-dark table-cabezera" style="position: relative;">
                    <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
                        <i class="fas fa-bars text-white"></i>
                    </button>

                    <ul class="navbar-nav d-md-inline-block ms-auto me-0 me-md-3 my-2 my-md-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="text-white d-none d-lg-inline fw-bold me-3 fs-6">@ViewBag.PriNombreAut @ViewBag.PriApellidoAut</span>
                                <div class="position-relative me-2" style="width: 40px; height: 40px;">
                                    <img src="@(string.IsNullOrEmpty(ViewBag.PerfilAut) ?
                                           "https://ssl.gstatic.com/accounts/ui/avatar_2x.png" :
                                           $"data:image/jpeg;base64,{ViewBag.PerfilAut}")"
                                         class="rounded-circle border border-2 border-white"
                                         alt="avatar"
                                         style="width: 100%; height: 100%; object-fit: cover;">
                                </div>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <!-- Encabezado con foto grande -->
                                <li class="dropdown-header text-center py-3">
                                    <div class="mx-auto mb-2" style="width: 150px; height: 150px;">
                                        <img src="@(string.IsNullOrEmpty(ViewBag.PerfilAut) ?
                                               "https://ssl.gstatic.com/accounts/ui/avatar_2x.png" :
                                               $"data:image/jpeg;base64,{ViewBag.PerfilAut}")"
                                             class="rounded-circle border border-3 border-white w-100 h-100"
                                             alt="avatar grande"
                                             style="object-fit: cover;">
                                    </div>
                                    <div class="fw-bold">@ViewBag.PriNombreAut @ViewBag.PriApellidoAut</div>
                                    <div class="small text-muted">@ViewBag.CorreoAut</div>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item loading-overlay" href="@Url.Action("Configuraciones", "Usuario")">Ajustes</a></li>
                                <li><a class="dropdown-item" href="#!">Registro de actividad</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item loading-overlay" href="@Url.Action("CerrarSesion", "Home")">Cerrar sesión</a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
                <div style="display: flex;">
                    <div style="background: #DC291E; width: 33.3%; height: 6px;"></div>
                    <div style="background: #FBB907; width: 33.3%; height: 6px;"></div>
                    <div style="background: #1A2791; width: 33.4%; height: 6px;"></div>
                </div>

                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
            <footer class="position-relative mt-3">
                <div class="container-fluid">
                    <div class="mb-3" style="border-top: 1px solid #E6E6E6"></div>
                    <div class="small">
                        <p class="text-center esp-link" style="">&copy; UNAN-Managua - @DateTime.Now.Year</p>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/complementos")
    @RenderSection("scripts", required: false)
    <script>
        window.addEventListener('DOMContentLoaded', event => {
            const sidebarToggle = document.body.querySelector('#sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', event => {
                    event.preventDefault();
                    document.body.classList.toggle('sb-sidenav-toggled');
                    localStorage.setItem('sb|sidebar-toggle', document.body.classList.contains('sb-sidenav-toggled'));
                });
            }
        });

        $(document).ready(function () {
            // Mostrar LoadingOverlay cuando un enlace con la clase 'loading-overlay' sea clickeado
            $(document).on("click", "a.loading-overlay", function (e) {
                $.LoadingOverlay("show");
            });

            // Ocultar LoadingOverlay cuando la página termina de cargar
            $(window).on("load", function () {
                $.LoadingOverlay("hide");
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/Scripts/Summernote/summernote-bs5.min.js"></script>

    <!-- Core JS -->
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/lightgallery.umd.min.js"></script>

    <!-- Plugins JS -->
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/plugins/zoom/lg-zoom.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/plugins/thumbnail/lg-thumbnail.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/plugins/fullscreen/lg-fullscreen.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/plugins/rotate/lg-rotate.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/plugins/share/lg-share.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/plugins/pager/lg-pager.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/plugins/autoplay/lg-autoplay.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/plugins/comment/lg-comment.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/plugins/hash/lg-hash.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/plugins/video/lg-video.umd.min.js"></script>

    <!-- Script de OnlyOffice -->
    <script src="http://192.168.1.50:8080/web-apps/apps/api/documents/api.js"></script>
</body>
</html>
