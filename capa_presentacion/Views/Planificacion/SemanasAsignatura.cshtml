@model capa_entidad.MATRIZASIGNATURA

@{
    ViewBag.Title = "Semanas de la signatura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Contenedor-->
<div class="card shadow-sm mt-3">
    <div class="card-body">
        <div class="tab-content" id="myTabContent">
            <!-- Contenedor 1-->
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 gap-2">
                    <div class="breadcrumb mb-0 shadow-sm rounded bg-light p-3 align-items-center flex-grow-1 me-md-3 w-100">
                        <div class="breadcrumb-item text-truncate">
                            <span class="text-primary fw-bold">
                                <i class="fas fa-layer-group me-2"></i>@Model.codigo_asignatura || @Model.nombre_asignatura - @Model.nombre_profesor
                            </span>
                        </div>
                    </div>
                    <div class="d-flex align-items-center flex-shrink-0 gap-2">
                        <a href="@Url.Action("Matriz_de_Integracion", "Planificacion")" class="btn btn-danger">
                            <i class="fa fa-times me-2"></i>Regresar
                        </a>
                    </div>
                </div>


                <hr />

                <!-- Semanas -->
                <div class="container-fluid mb-3">
                    <div class="row g-3" id="semanasAsignatura">
                        <!-- Las semanas se cargarán aquí via AJAX -->
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Modal asignar asignatura a la matriz -->
<div class="modal fade" id="asignarAsignatura" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-light" style="background-color: #0072BB">
                <h5 class="modal-title">Asignar asignaturas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="text" id="idAsignatura" name="idAsignatura" value="0" />
                <div class="mb-3">
                    <label class="form-label">Docente</label>
                    <select class="form-control" id="profesores" name="profesores" style="width: 100%;" tabindex="-1"></select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Asignatura</label>
                    <select class="form-control" id="asignaturas" name="asignaturas" style="width: 100%;" tabindex="-1"></select>
                </div>
            </div>
            <div class="modal-footer pe-0 ps-0 flex-nowrap ">
                <button type="button" class="btn btn-danger w-50" data-bs-dismiss="modal">
                    <i class="fas fa-times-circle me-2"></i>Cerrar
                </button>
                <button type="button" style="background: #0072BB " onclick="GuardarSemana()" class="btn btn-success w-50">
                    <i class="fas fa-share me-2"></i>Asignar
                </button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            cargarSemanasDeLaAsignaturasDeLaMatriz(@Model.id_matriz_asignatura);
        });
    </script>
    <script src="@Url.Content("~/Scripts/Views/SemanasAsignatura.js")" type="text/javascript"></script>
}