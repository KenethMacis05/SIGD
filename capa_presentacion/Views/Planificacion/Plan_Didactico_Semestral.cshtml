﻿
@{
    ViewBag.Title = "Plan Didáctico Semestral";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Titulo-->
<div class="alert text-center" style="background-color: #F7F7F7; border: 1px #D2D2D2 solid " role="alert"><h2 class="fs-3">Plan Didáctico Semestral</h2></div>

<!--Contenedor-->
<div class="card">
    <div class="card-body">
        <!--Contenedor -->
        <div class="row mt-3">
            <div class="col-auto">
                <a class="btn btn-primary" href="@Url.Action("CrearPlanDidactico", "Planificacion")"><i class="fa fa-plus"></i> Crear Plan Semestral</a>
            </div>
        </div>

        <hr />

        <!--Tabla-->
        <table class="display cell-border" style="width: 100%" id="datatable">
            <thead class="table-cabezera cell-border" style="background: #0072BB; color: white">
                <tr>
                    <th>#</th>
                    <th>Codigo</th>
                    <th>Nombre</th>
                    <th>Asignatura</th>
                    <th># Semanas</th>
                    <th>Periodo</th>
                    <th>Carrera</th>
                    <th>Modalidad</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
            <tfoot>

            </tfoot>
        </table>
    </div>
</div>

@if (TempData["CREATE"] != null)
{
    <div id="tempDataCreate" style="display: none">@TempData["CREATE"]</div>
}

@section scripts{
    <script>
    $(document).ready(function () {
        @if (TempData["Success"] != null)
        {
            <text>
                showAlert("¡Éxito!", "@Html.Raw(TempData["Success"])", "success").then((result) => {
                     @if (TempData["CREATE"] != null)
                     {
                         <text>
                            MostrarModalTempData();
                         </text>
                     }
                });;
            </text>
        }

        @if (TempData["Error"] != null)
        {
            <text>
                showAlert("¡Error!", "@Html.Raw(TempData["Error"])", "error");
            </text>
        }
    });
    </script>
    <script src="@Url.Content("~/Scripts/Views/PlanSemestral.js")" type="text/javascript"></script>
}