﻿
@{
    ViewBag.Title = "Plan Didáctico Semestral";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* CSS personalizado */
    .select2-hidden {
        opacity: 0;
        position: absolute;
        width: 1px;
        height: 1px;
    }

    .input-group .select2-container {
        flex: 1 1 auto;
    }

    .input-group .select2-selection {
        height: 100%;
    }

     .input-group .select2-selection:focus {
         border-color: #86b7fe;
         outline: 0;
         box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
     }
</style>

<!--Titulo-->
<div class="alert text-center" style="background-color: #F7F7F7; border: 1px #D2D2D2 solid " role="alert"><h2 class="fs-3">Plan Didáctico Semestral</h2></div>

<!--Contenedor-->
<div class="card">
    <div class="card-body">
        <!--Contenedor -->
        <div class="row mt-3">
            <div class="col-auto">
                <button type="button" class="btn btn-primary" onclick="abrirModal(null)"><i class="fa fa-plus"></i> Crear Plan Semestral</button>
            </div>
        </div>

        <hr />

        <!--Tabla-->
        <table class="display cell-border" style="width: 100%" id="datatable">
            <thead class="table-cabezera cell-border" style="background: #0072BB; color: white">
                <tr>
                    <th>#</th>
                    <th>Codigo</th>
                    <th>Nombre</th>
                    <th>Asignatura</th>
                    <th># Semanas</th>
                    <th>Periodo</th>
                    <th>Carrera</th>
                    <th>Modalidad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
            <tfoot>

            </tfoot>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade modal-lg" id="crearPlanSemestral" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-light" style="background-color: #0072BB">
                <h5 class="modal-title" id="exampleModalLabel">Plan didáctica semestral</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body g-2">

                <div class="mb-3" id="infoSemana">
                    <div class="card">
                        <div class="card-header">
                            <span>Buscar asignatura de Matriz</span>
                        </div>
                        <div class="card-body py-2">
                            <div class="row">
                                <div class="col-lg-4 col-sm-12">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1">Usuario</span>
                                        <input type="text" class="form-control" id="usuario" placeholder="Usuario" aria-label="Usuario" aria-describedby="basic-addon1">
                                    </div>
                                </div>
                                <div class="col-lg-8 col-sm-12">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1">Nombre completo</span>
                                        <input type="text" class="form-control" id="nombrecompleto" placeholder="Nombre completo" aria-label="Nombre completo" aria-describedby="basic-addon1">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col col-md-12 col-sm-12">
                                    <div class="input-group mb-3">
                                        <label for="inputGroupSelectPeriodo" class="input-group-text">Periodo</label>
                                        <select class="form-select" id="inputGroupSelectPeriodo"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer flex-nowrap">
                            <button style="width: 49%" class="btn btn-secondary" id="btnLimpiar"><i class="fas fa-broom me-2"></i>Limpiar Filtros</button>
                            <button style="width: 49%" class="btn bg-success text-white" onclick="Buscar()"><i class="fa fa-search"></i> Buscar</button>
                        </div>
                    </div>
                </div>

                
                <hr />

                <input type="hidden" name="idUsuario" id="idUsuario" value="0" autocomplete="off">

                <!--Tabla-->
                <table class="display cell-border" style="width: 100%" id="datatableMatriz">
                    <thead class="table-cabezera cell-border" style="background: #0072BB; color: white">
                        <tr>
                            <th>#</th>
                            <th>Codigo</th>
                            <th>Nombre</th>
                            <th>Periodo</th>
                            <th>Asignatura</th>
                            <th>Carrera</th>
                            <th>Seleccionar</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                    <tfoot>

                    </tfoot>
                </table>

                <div class="modal-footer pe-0 ps-0 flex-nowrap">
                    <button type="button" class="btn btn-danger w-50" data-bs-dismiss="modal">
                        <i class="fas fa-times-circle me-2"></i>Cerrar
                    </button>
                    <button type="submit" style="background: #0072BB" onclick="Guardar()" class="btn btn-success w-50">
                        <i class="fas fa-save me-2"></i>Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/Views/PlanSemestral.js")" type="text/javascript"></script>
    <script>
        
    </script>
}