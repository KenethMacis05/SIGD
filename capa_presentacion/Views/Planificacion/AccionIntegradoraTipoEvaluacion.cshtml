@model capa_entidad.MATRIZINTEGRACIONCOMPONENTES

@{
    ViewBag.Title = "Acción Integradora y Tipo de Evaluación";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var accionTipo = ViewBag.accionIntegradoraTipoEvaluacion as List<capa_entidad.ACCIONINTEGRADORA_TIPOEVALUACION>;
}

<link rel="stylesheet" href="@Url.Content("~/Content/Views/AccionTipo.css")" />

<!--Contenedor-->
<div class="card shadow-sm mt-3">
    <div class="card-body">
        <div class="tab-content" id="myTabContent">
            <!-- Contenedor 1-->
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 gap-2">
                    <div class="breadcrumb mb-0 shadow-sm rounded bg-light p-3 align-items-center flex-grow-1 me-md-3 w-100">
                        <div class="breadcrumb-item text-truncate">
                            <span class="text-primary fw-bold">
                                <i class="fas fa-layer-group me-2"></i>Acción Integradora y Tipo de Evaluación, @Model.nombre || @Model.codigo || @Model.periodo
                            </span>
                        </div>
                    </div>
                    <div class="d-flex align-items-center flex-shrink-0 gap-2">
                        <a href="@Url.Action("Matriz_de_Integracion", "Planificacion")" class="btn btn-danger">
                            <i class="fa fa-times me-2"></i>Regresar
                        </a>
                    </div>
                </div>


                <hr />

                <!-- ITEMS -->
                <div class="container-fluid mb-3">
                    <div class="row g-3" id="items">
                        <!-- Los items se cargarán aquí via AJAX -->
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Modal asignar asignatura a la matriz -->
<div class="modal fade" id="accionTipo" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-light" style="background-color: #0072BB">
                <h5 class="modal-title">Asignar asignaturas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="text" id="idAccionTipo" name="idAccionTipo" value="0" />
                <input type="text" id="fkMatrisIntegracion" name="fkMatrisIntegracion" value="@Model.id_matriz_integracion" />
                <input type="text" id="fkMatrisIntegracionEncriptada" name="fkMatrisIntegracionEncriptada" value="@Model.id_encriptado" />
                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-tasks me-1"></i> Estado
                        </span>
                        <select class="form-control" id="estado">
                            <option value="Pendiente">Pendiente</option>
                            <option value="En proceso">En proceso</option>
                            <option value="Finalizado">Finalizado</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Acción Integradora</label>
                    <input type="text" class="form-control" id="accionIntegradora" name="accionIntegradora">
                </div>
                <div class="mb-3">
                    <label class="form-label">Tipo de Evaluación</label>
                    <input type="text" class="form-control" id="tipoEvaluacion" name="tipoEvaluacion">
                </div>
            </div>
            <div class="modal-footer pe-0 ps-0 flex-nowrap ">
                <button type="button" class="btn btn-danger w-50" data-bs-dismiss="modal">
                    <i class="fas fa-times-circle me-2"></i>Cerrar
                </button>
                <button type="button" style="background: #0072BB " onclick="guardarAccionTipo()" class="btn btn-success w-50">
                    <i class="fas fa-share me-2"></i>Guardar
                </button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            cargar("@Model.id_encriptado");
            window.accionTipoData = @Html.Raw(Json.Encode(ViewBag.accionIntegradoraTipoEvaluacion));
        });
    </script>
    <script src="@Url.Content("~/Scripts/Views/AccionIntegradora_TipoEvaluacion.js")" type="text/javascript"></script>
}