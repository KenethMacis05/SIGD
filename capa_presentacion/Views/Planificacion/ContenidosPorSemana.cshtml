@model capa_entidad.MATRIZINTEGRACIONCOMPONENTES
@{
    ViewBag.Title = "Contenidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Contenedor-->
<div class="card shadow-sm mt-3">
    <div class="card-body">
        <div class="tab-content" id="myTabContent">
            <!-- Contenedor 1-->
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 gap-2">
                    <div class="breadcrumb mb-0 shadow-sm rounded bg-light p-3 align-items-center flex-grow-1 me-md-3 w-100">
                        <div class="breadcrumb-item text-truncate">
                            <span class="text-primary fw-bold">
                                <i class="fas fa-layer-group me-2"></i>@Model.nombre || @Model.codigo
                            </span>
                        </div>
                    </div>
                    <div class="d-flex align-items-center flex-shrink-0 gap-2">
                        <button type="button" class="btn btn-secondary" onclick="abrirModal(null)">
                            <i class="fas fa-book-medical me-2"></i>Agregar Asignatura
                        </button>
                        <a href="@Url.Action("Matriz_de_Integracion", "Planificacion")" class="btn btn-danger">
                            <i class="fa fa-times me-2"></i>Regresar
                        </a>
                    </div>
                </div>


                <hr />

                <!-- Asignaturas de la Matriz -->
                <div class="container-fluid mb-3">
                    <div class="row g-3" id="matrizAsignatura">
                        <!-- Las asignaturas se cargarán aquí via AJAX -->
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            window.contenidosData = @Html.Raw(Json.Encode(ViewBag.Contenidos));
            console.log(window.contenidosData);
        });
    </script>
}