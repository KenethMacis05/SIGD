@model capa_entidad.MATRIZINTEGRACIONCOMPONENTES
@{
    ViewBag.Title = "Semanas";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Convertir ViewBag a lista tipada para mejor manejo
    var semanas = ViewBag.Semanas as List<capa_entidad.SEMANAS>;
}

<!-- Contenedor Principal -->
<div class="card shadow-sm mt-3">
    <div class="card-body">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 gap-2">
            <div class="breadcrumb mb-0 shadow-sm rounded bg-light p-3 align-items-center flex-grow-1 me-md-3 w-100">
                <div class="breadcrumb-item text-truncate">
                    <span class="text-primary fw-bold">
                        <i class="fas fa-calendar-alt me-2"></i>Semanas de la Matriz: @Model.nombre || @Model.codigo
                    </span>
                </div>
            </div>
            <div class="d-flex align-items-center flex-shrink-0 gap-2">
                <button class="btn btn-primary" onclick="abrirModalNuevo()">
                    <i class="fas fa-plus me-2"></i>Nueva Semana
                </button>
                <a href="@Url.Action("Matriz_de_Integracion", "Planificacion")" class="btn btn-danger">
                    <i class="fa fa-times me-2"></i>Regresar
                </a>
            </div>
        </div>

        <hr />
        <input type="hidden" name="idEncriptado" id="idEncriptado" value="@Model.id_encriptado" />

        <!-- Tabla de Semanas -->
        <table class="display cell-border" style="width: 100%" id="datatable">
            <thead class="table-cabezera cell-border" style="background: #0072BB; color: white">
                <tr>
                    <th>Semana</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Descripción</th>
                    <th>Tipo</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal para Semanas -->
<div class="modal fade modal-lg" id="semanasModal" tabindex="-1" aria-labelledby="semanasModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-light" style="background-color: #0072BB">
                <h5 class="modal-title" id="semanasModalLabel">Gestión de Semanas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body g-2">
                    <input type="hidden" name="idSemana" id="idSemana" value="0" autocomplete="off">

                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Número de Semana</label>
                            <input type="number" class="form-control" id="numeroSemana" name="numeroSemana" required min="1" autocomplete="off">
                        </div>
                        <div class="col-md-9 mb-3">
                            <label class="form-label">Descripción</label>
                            <input type="text" class="form-control" id="descripcion" name="descripcion" required autocomplete="off">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Fecha Inicio</label>
                            <input type="date" class="form-control" id="fechaInicio" name="fechaInicio" required autocomplete="off">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Fecha Fin</label>
                            <input type="date" class="form-control" id="fechaFin" name="fechaFin" required autocomplete="off">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Tipo de Semana</label>
                            <select class="form-control" id="tipoSemana" name="tipoSemana" required>
                                <option value="Normal">Normal</option>
                                <option value="Corte Evaluativo">Corte Evaluativo</option>
                                <option value="Corte Final">Corte Final</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Estado</label>
                            <select class="form-control" id="estado" name="estado" required>
                                <option value="Pendiente">Pendiente</option>
                                <option value="En proceso">En proceso</option>
                                <option value="Finalizado">Finalizado</option>
                            </select>
                        </div>
                    </div>

                    <div class="modal-footer pe-0 ps-0 flex-nowrap ">
                        <button type="button" class="btn btn-danger w-50" data-bs-dismiss="modal">
                            <i class="fas fa-times-circle me-2"></i>Cerrar
                        </button>
                        <button type="submit" onclick="Guardar()" style="background: #0072BB" class="btn btn-success w-50">
                            <i class="fas fa-save me-2"></i>Guardar
                        </button>
                    </div>
            </div>
        </div>
    </div>
</div><div class="modal fade modal-lg" id="semanas" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-light" style="background-color: #0072BB">
                <h5 class="modal-title" id="exampleModalLabel">Semanas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body g-2">
                <form id="semanaForm" autocomplete="off">

                    <input type="hidden" name="idSemana" id="idSemana" value="0" autocomplete="off">

                    <div class="row">
                        <div class="col-lg-3 mb-3">
                            <label class="form-label" for="priNombre">Descripción</label>
                            <input type="text" class="form-control" id="descripcion" name="descripcion" required autocomplete="off">
                        </div>
                    </div>
                    <div class="modal-footer pe-0 ps-0 flex-nowrap ">
                        <button type="button" class="btn btn-danger w-50" data-bs-dismiss="modal">
                            <i class="fas fa-times-circle me-2"></i>Cerrar
                        </button>
                        <button type="submit" style="background: #0072BB" onclick="Guardar()" class="btn btn-success w-50">
                            <i class="fas fa-save me-2"></i>Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/Views/Semanas.js")" type="text/javascript"></script>
}

