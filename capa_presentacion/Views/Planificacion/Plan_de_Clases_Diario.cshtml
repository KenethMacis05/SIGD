﻿
@{
    ViewBag.Title = "Plan de Clases Diario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Titulo-->
<div class="alert text-center" style="background-color: #F7F7F7; border: 1px #D2D2D2 solid " role="alert"><h2 class="fs-3">Plan de Clases Diario</h2></div>

<!-- Mensaje de error (si existe) -->
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>¡Atención!</strong> @ViewBag.Error
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<!--Contenedor-->
<div class="card">
    <div class="card-body">
        <!--Contenedor -->
        <div class="row mt-3">
            <div class="col-auto">
                <button type="button" class="btn btn-primary" onclick="abrirModal(null)"><i class="fa fa-plus"></i> Crear plan</button>
            </div>
            <!-- Filtros -->
            <div class="col-md-4">
                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupSelectRol">Filtrar por rol:</label>
                    <select class="form-select" id="inputGroupSelectRol"></select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupSelectEstado">Filtrar por estado:</label>
                    <select class="form-select" id="inputGroupSelectEstado">
                        <option value="" disabled selected>Seleccionar...</option>
                        <option value="Todos">Todos</option>
                        <option value="true">Activo</option>
                        <option value="false">No activo</option>
                    </select>
                </div>
            </div>
        </div>

        <hr />

        <!--Tabla-->
        <table class="display cell-border" style="width: 100%" id="datatable">
            <thead class="table-cabezera cell-border" style="background: #0072BB; color: white">
                <tr>
                    <th>#</th>
                    <th>Codigo</th>
                    <th>Nombre</th>
                    <th>Asignatura</th>
                    <th>Inicio/Fin</th>
                    <th>Periodo</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
            <tfoot>

            </tfoot>
        </table>
    </div>
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/Views/PlanClasesDiario.js")" type="text/javascript"></script>
}